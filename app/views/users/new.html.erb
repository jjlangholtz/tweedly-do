<div class='columns large-4 large-centered panel'>
  <%= simple_form_for @user do |f| %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.button :submit, 'Sign Up For TweedlyDo', class: 'small success' %>
    <%= link_to "Have an account?", new_logins_path, class: 'right', remote: true %>
  <% end %>
  <div id="login_modal" class="reveal-modal" data-reveal></div>
</div>
